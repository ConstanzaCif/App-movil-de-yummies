<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título grande estilo pedidos -->
        <TextView
            android:id="@+id/txtSectionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTRAR PEDIDO"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:background="@drawable/title_background"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="#FFFFFF">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <TextView
                    android:id="@+id/labelTienda"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Selecciona Tienda"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#D32F2F"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <Spinner
                    android:id="@+id/spinnerTienda"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:backgroundTint="#D32F2F"
                    app:layout_constraintTop_toBottomOf="@id/labelTienda"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"/>

                <!-- Spinner Producto -->
                <TextView
                    android:id="@+id/labelProducto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Selecciona Producto"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#1976D2"
                    app:layout_constraintTop_toBottomOf="@id/spinnerTienda"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"/>

                <Spinner
                    android:id="@+id/spinnerProducto"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:backgroundTint="#1976D2"
                    app:layout_constraintTop_toBottomOf="@id/labelProducto"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"/>

                <!-- Input cantidad -->
                <EditText
                    android:id="@+id/inputCantidad"
                    android:hint="Cantidad"
                    android:inputType="number"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:backgroundTint="#D32F2F"
                    app:layout_constraintTop_toBottomOf="@id/spinnerProducto"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"/>

                <!-- Botón agregar detalle -->
                <Button
                    android:id="@+id/btnAgregarDetalle"
                    android:text="Agregar Detalle"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#1976D2"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    app:layout_constraintTop_toBottomOf="@id/inputCantidad"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"/>

                <!-- Lista de detalles -->
                <TextView
                    android:id="@+id/labelDetalles"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Detalles agregados"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#1976D2"
                    app:layout_constraintTop_toBottomOf="@id/btnAgregarDetalle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"/>

                <ListView
                    android:id="@+id/listViewDetalles"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:divider="@android:color/darker_gray"
                    android:dividerHeight="1dp"
                    app:layout_constraintTop_toBottomOf="@id/labelDetalles"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"/>

                <!-- Mapa -->
                <TextView
                    android:id="@+id/labelMapa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ubicación del pedido"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#D32F2F"
                    app:layout_constraintTop_toBottomOf="@id/listViewDetalles"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"/>

                <FrameLayout
                    android:id="@+id/mapContainer"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/labelMapa"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Botón guardar -->
                <Button
                    android:id="@+id/btnGuardarPedido"
                    android:text="Guardar Pedido"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#D32F2F"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    app:layout_constraintTop_toBottomOf="@id/mapContainer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>

