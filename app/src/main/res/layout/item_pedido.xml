<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Encabezado: Pedido y Total en la misma fila -->
        <TextView
            android:id="@+id/txtIdPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedido #1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txtTotalPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q 45.00"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/txtIdPedido"
            android:drawableLeft="@drawable/ic_attach_money"
            android:drawablePadding="8dp"/>

        <!-- Fecha -->
        <TextView
            android:id="@+id/txtFechaPedido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fecha: 28/09/2025"
            android:textSize="16sp"
            android:textColor="#1976D2"
            android:fontFamily="sans-serif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtIdPedido"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_calendar_today"
            android:drawablePadding="8dp"/>

        <!-- Tienda -->
        <TextView
            android:id="@+id/txtTiendaPedido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tienda: Centro"
            android:textSize="16sp"
            android:textColor="#D32F2F"
            android:fontFamily="sans-serif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtFechaPedido"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_store"
            android:drawablePadding="8dp"/>

        <!-- Usuario -->
        <TextView
            android:id="@+id/txtUsuarioPedido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Usuario: Juan PÃ©rez"
            android:textSize="16sp"
            android:textColor="#1976D2"
            android:fontFamily="sans-serif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTiendaPedido"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="8dp"/>

        <!-- Divider -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#80D32F2F"
            app:layout_constraintTop_toBottomOf="@id/txtUsuarioPedido"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>