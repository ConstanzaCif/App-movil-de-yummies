<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/imgProducto2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="Imagen del producto"/>

        <!-- Nombre del producto -->
        <TextView
            android:id="@+id/txtNombreProducto2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nombre Producto"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/imgProducto2"
            app:layout_constraintTop_toTopOf="@id/imgProducto2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"/>

        <!-- Código del producto -->
        <TextView
            android:id="@+id/txtCodigoProducto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Código: 123"
            app:layout_constraintStart_toStartOf="@id/txtNombreProducto2"
            app:layout_constraintTop_toBottomOf="@id/txtNombreProducto2"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Precio del producto -->
        <TextView
            android:id="@+id/txtPrecioProducto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Precio: Q0.00"
            app:layout_constraintStart_toStartOf="@id/txtNombreProducto2"
            app:layout_constraintTop_toBottomOf="@id/txtCodigoProducto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/imgProducto2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
