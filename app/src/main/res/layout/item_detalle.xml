<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- ID Producto -->
        <TextView
            android:id="@+id/txtIdProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Producto #1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Cantidad -->
        <TextView
            android:id="@+id/txtCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad: 2"
            android:textSize="16sp"
            android:textColor="#1976D2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtIdProducto"
            android:layout_marginTop="4dp"/>

        <!-- Precio Unitario -->
        <TextView
            android:id="@+id/txtPrecioUnitario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio Unitario: Q 15.00"
            android:textSize="16sp"
            android:textColor="#1976D2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtCantidad"
            android:layout_marginTop="4dp"/>

        <!-- Subtotal -->
        <TextView
            android:id="@+id/txtSubtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtotal: Q 30.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#388E3C"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtPrecioUnitario"/>

        <!-- Divider -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#80D32F2F"
            app:layout_constraintTop_toBottomOf="@id/txtPrecioUnitario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>